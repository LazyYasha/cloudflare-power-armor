# EditorConfig is awesome: https://EditorConfig.org
root = true

[*.{groovy,java,kt,xml}]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# IntelliJ IDEA code style
[*.{groovy,java,kt}]
ij_continuation_indent_size = 8
